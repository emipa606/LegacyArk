<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="AnimalThingBase">
    <defName>LonghornCow</defName>
    <label>longhorn cow</label>
    <description>The Longhorn is a breed of beef cattle from Texas known for their large horns.</description>
    <statBases>
      <MoveSpeed>3.2</MoveSpeed>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <MarketValue>350</MarketValue>
      <Mass>500</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>18</milkAmount>
      </li>
    </comps>
    <tools>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8.8</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>horn</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HornAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
      <li>
        <label>left hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithHoovesAndHorns</body>
      <herdAnimal>true</herdAnimal>
      <packAnimal>false</packAnimal>
      <baseBodySize>2.0</baseBodySize>
      <baseHungerRate>0.85</baseHungerRate>
      <baseHealthScale>1.5</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Plain</leatherDef>
      <trainability>Simple</trainability>
      <useMeatFrom>Cow</useMeatFrom>
      <wildness>0.2</wildness>
      <petness>0.05</petness>
      <nuzzleMtbHours>120</nuzzleMtbHours>
      <gestationPeriodDays>15</gestationPeriodDays>
      <manhunterOnDamageChance>0</manhunterOnDamageChance>
      <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 0.85)</li>
          <li>(2, 0.15)</li>
          <li>(2.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>20</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.45</minAge>
          <soundWounded>Pawn_Muffalo_Wounded</soundWounded>
          <soundDeath>Pawn_Muffalo_Death</soundDeath>
          <soundCall>Pawn_Muffalo_Call</soundCall>
          <soundAngry>Pawn_Muffalo_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
