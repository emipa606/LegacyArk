<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Biomes! Islands</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <!-- MakeChocolatemilk -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="CactusMantis"]/race/wildBiomes</xpath>
          <value>
            <BiomesIslands_TropicalIsland>1</BiomesIslands_TropicalIsland>
            <BiomesIslands_DesertIsland>0.5</BiomesIslands_DesertIsland>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>