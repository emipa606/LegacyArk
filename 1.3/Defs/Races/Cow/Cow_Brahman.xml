<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArkCowBase">
    <defName>BrahmanCow</defName>
    <label>brahman cow</label>
    <description>The Brahman is an American breed of zebuine beef cattle. The Brahman has a high tolerance of heat and gives more meat.</description>
    <statBases>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <ComfyTemperatureMax>60</ComfyTemperatureMax>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>18</milkAmount>
      </li>
    </comps>
    <race>
      <packAnimal>true</packAnimal>
      <wildness>0.1</wildness>
      <petness>0.05</petness>
      <useMeatFrom>Cow</useMeatFrom>
    </race>
  </ThingDef>
  <!-- Animal Textures -->
  <PawnKindDef ParentName="ArkCowPawnBase">
    <defName>BrahmanCow</defName>
    <race>BrahmanCow</race>
    <labelMale>brahman bull</labelMale>
    <label>brahman cow</label>
    <lifeStages>
      <li>
        <label>brahman calf</label>
        <labelPlural>brahman calves</labelPlural>
        <bodyGraphicData>
          <texPath>Animal/Cow/Brahman/BrahmanCalf</texPath>
          <drawSize>1.3</drawSize>
          <color>(255,255,255)</color>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Bull</texPath>
          <drawSize>1.3</drawSize>
        </dessicatedBodyGraphicData>
        <femaleDessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
          <drawSize>1.25</drawSize>
        </femaleDessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Animal/Cow/Brahman/BrahmanBull</texPath>
          <drawSize>2.15</drawSize>
          <color>(255,255,255)</color>
        </bodyGraphicData>
        <femaleGraphicData>
          <texPath>Animal/Cow/Brahman/BrahmanCow</texPath>
          <drawSize>2.0</drawSize>
        </femaleGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Bull</texPath>
          <drawSize>2.15</drawSize>
        </dessicatedBodyGraphicData>
        <femaleDessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
          <drawSize>2.0</drawSize>
        </femaleDessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Animal/Cow/Brahman/BrahmanBull</texPath>
          <drawSize>2.7</drawSize>
          <color>(255,255,255)</color>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.05)</offset>
          </shadowData>
        </bodyGraphicData>
        <femaleGraphicData>
          <texPath>Animal/Cow/Brahman/BrahmanCow</texPath>
          <drawSize>2.6</drawSize>
        </femaleGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Bull</texPath>
          <drawSize>2.7</drawSize>
        </dessicatedBodyGraphicData>
        <femaleDessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
          <drawSize>2.6</drawSize>
        </femaleDessicatedBodyGraphicData>
      </li>
