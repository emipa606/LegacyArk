<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>VGP Garden Gourmet</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <!-- MakeChocolatemilk -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/RecipeDef[defName="MakeChocolatemilk"]/ingredients</xpath>
          <value>
            <ingredients>
              <li>
                <filter>
                  <thingDefs>
                    <li>Chocolate</li>
                  </thingDefs>
                </filter>
                <count>5</count>
              </li>
              <li>
                <filter>
                  <thingDefs>
                    <li>Milk</li>
                    <li>RichMilk</li>
                  </thingDefs>
                </filter>
                <count>5</count>
              </li>
            </ingredients>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="MakeChocolatemilk"]/fixedIngredientFilter/thingDefs</xpath>
          <value>
            <li>RichMilk</li>
          </value>
        </li>
        <!-- MakeIcecream -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/RecipeDef[defName="MakeIcecream"]/ingredients</xpath>
          <value>
            <ingredients>
              <li>
                <filter>
                  <thingDefs>
                    <li>Sugar</li>
                  </thingDefs>
                </filter>
                <count>4</count>
              </li>
              <li>
                <filter>
                  <thingDefs>
                    <li>Chocolate</li>
                  </thingDefs>
                </filter>
                <count>1</count>
              </li>
              <li>
                <filter>
                  <thingDefs>
                    <li>Milk</li>
                    <li>RichMilk</li>
                  </thingDefs>
                </filter>
                <count>10</count>
              </li>
            </ingredients>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="MakeIcecream"]/fixedIngredientFilter/thingDefs</xpath>
          <value>
            <li>RichMilk</li>
          </value>
        </li>
        <!-- MakeYogurt -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/RecipeDef[defName="MakeYogurt"]/ingredients</xpath>
          <value>
            <ingredients>
              <li>
                <filter>
                  <thingDefs>
                    <li>Milk</li>
                    <li>RichMilk</li>
                  </thingDefs>
                </filter>
                <count>10</count>
              </li>
              <li>
                <filter>
                  <categories>
                    <li>FruitFoodRaw</li>
                  </categories>
                </filter>
                <count>3</count>
              </li>
            </ingredients>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="MakeYogurt"]/fixedIngredientFilter/thingDefs</xpath>
          <value>
            <li>RichMilk</li>
          </value>
        </li>
        <!-- MakeSmoothie -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/RecipeDef[defName="MakeSmoothie"]/ingredients</xpath>
          <value>
            <ingredients>
              <li>
                <filter>
                  <thingDefs>
                    <li>Milk</li>
                    <li>RichMilk</li>
                  </thingDefs>
                </filter>
                <count>10</count>
              </li>
              <li>
                <filter>
                  <categories>
                    <li>FruitFoodRaw</li>
                  </categories>
                </filter>
                <count>8</count>
              </li>
            </ingredients>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="MakeSmoothie"]/fixedIngredientFilter/thingDefs</xpath>
          <value>
            <li>RichMilk</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>