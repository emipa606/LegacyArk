<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--=============== Horns base ====================-->
  <ThingDef Name="HornsBase" Abstract="True" ParentName="ResourceVerbBase">
    <equippedAngleOffset>-20</equippedAngleOffset>
    <statBases>
      <MarketValue>30</MarketValue>
      <MaxHitPoints>120</MaxHitPoints>
      <Mass>1.5</Mass>
      <Flammability>0.9</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>base</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <chanceFactor>0.5</chanceFactor>
      </li>
    </tools>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>10</stackLimit>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>AnimalPart</li>
    </thingSetMakerTags>
  </ThingDef>
  <!--=============== Longhorn horn ====================-->
  <ThingDef ParentName="HornsBase">
    <defName>LonghornHorn</defName>
    <label>longhorn horn</label>
    <description>A horn from a Longhorn cattle, can be used as a weapon or sold for profit.</description>
    <graphicData>
      <texPath>Item/LonghornHorn</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
