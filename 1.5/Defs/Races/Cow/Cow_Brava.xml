<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArkCowBase">
    <defName>BravaCow</defName>
    <label>brava cow</label>
    <description>The Brava is a breed of beef cattle from Scottland known for their superior quality meat.</description>
    <statBases>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>18</milkAmount>
      </li>
    </comps>
    <race>
      <trainability>Intermediate</trainability>
      <wildness>0.15</wildness>
      <petness>0.05</petness>
      <useMeatFrom>Cow</useMeatFrom>
    </race>
  </ThingDef>
