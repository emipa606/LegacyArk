<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArkCowBase">
    <defName>ZebuCow</defName>
    <label>zebu cow</label>
    <description>The Zebu is a breed of zebuine cattle from the Indus Valley known for their heat tolerance and meat.</description>
    <statBases>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <ComfyTemperatureMax>60</ComfyTemperatureMax>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>10</milkAmount>
      </li>
    </comps>
    <race>
      <wildness>0.25</wildness>
      <wildBiomes>
        <TropicalRainforest>0.6</TropicalRainforest>
        <AridShrubland>1</AridShrubland>
      </wildBiomes>
      <petness>0.05</petness>
      <packAnimal>true</packAnimal>
      <useMeatFrom>Cow</useMeatFrom>
    </race>
  </ThingDef>
  <!-- Animal Textures -->
  <PawnKindDef ParentName="ArkCowPawnBase">
    <defName>ZebuCow</defName>
    <race>ZebuCow</race>
    <label>zebu cow</label>
    <wildGroupSize>3~9</wildGroupSize>
    <labelMale>zebu bull</labelMale>
    <labelFemale>zebu cow</labelFemale>
    <lifeStages>
      <li>
        <label>zebu calf</label>
        <labelPlural>zebu calves</labelPlural>
        <bodyGraphicData>
          <texPath>Animal/Cow/Zebu/ZebuCalf</texPath>
          <drawSize>1.3</drawSize>
          <color>(255,255,255)</color>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Bull</texPath>
          <drawSize>1.3</drawSize>
        </dessicatedBodyGraphicData>
        <femaleDessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
          <drawSize>1.25</drawSize>
        </femaleDessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Animal/Cow/Zebu/ZebuBull</texPath>
          <drawSize>2.15</drawSize>
          <color>(255,255,255)</color>
        </bodyGraphicData>
        <femaleGraphicData>
          <texPath>Animal/Cow/Zebu/ZebuCow</texPath>
          <drawSize>2.0</drawSize>
        </femaleGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Bull</texPath>
          <drawSize>2.15</drawSize>
        </dessicatedBodyGraphicData>
        <femaleDessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
          <drawSize>2.0</drawSize>
        </femaleDessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Animal/Cow/Zebu/ZebuBull</texPath>
          <drawSize>2.7</drawSize>
          <color>(255,255,255)</color>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.05)</offset>
          </shadowData>
        </bodyGraphicData>
        <femaleGraphicData>
          <texPath>Animal/Cow/Zebu/ZebuCow</texPath>
          <drawSize>2.6</drawSize>
        </femaleGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Bull</texPath>
          <drawSize>2.7</drawSize>
        </dessicatedBodyGraphicData>
        <femaleDessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
          <drawSize>2.6</drawSize>
        </femaleDessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
</Defs>