<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArkCowBase">
    <defName>AngusCow</defName>
    <label>angus cow</label>
    <description>The Angus is a breed of beef cattle from Scottland known for their superior quality meat.</description>
    <statBases>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>18</milkAmount>
      </li>
    </comps>
    <race>
      <meatLabel>quality beef</meatLabel>
      <wildness>0.1</wildness>
      <petness>0.05</petness>
    </race>
  </ThingDef>
