<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArkCowBase">
    <defName>LimousinCow</defName>
    <label>limousin cow</label>
    <description>The Limousin is a breed of beef cattle from France known for producing meat.</description>
    <statBases>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>Milk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>18</milkAmount>
      </li>
    </comps>
    <race>
      <wildness>0.05</wildness>
      <petness>0.05</petness>
      <useMeatFrom>Cow</useMeatFrom>
    </race>
  </ThingDef>
