<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Animal Base -->
  <ThingDef ParentName="ArkSheepBase">
    <defName>MerinoSheep</defName>
    <label>merino sheep</label>
    <description>The Merino is a breed of sheep from the Spain known for their fine heavy wool.</description>
    <statBases>
      <ComfyTemperatureMin>-55</ComfyTemperatureMin>
      <ComfyTemperatureMax>45</ComfyTemperatureMax>
    </statBases>
    <comps>
      <li Class="CompProperties_Shearable">
        <woolDef>FineWool</woolDef>
        <shearIntervalDays>30</shearIntervalDays>
        <woolAmount>300</woolAmount>
      </li>
    </comps>
    <race>
      <wildness>0.25</wildness>
      <petness>0.10</petness>
    </race>
  </ThingDef>
  <!-- Animal Textures -->
  <PawnKindDef ParentName="ArkSheepPawnBase">
    <defName>MerinoSheep</defName>
    <labelPlural>merino sheep</labelPlural>
    <race>MerinoSheep</race>
    <wildGroupSize>3~9</wildGroupSize>
    <labelMale>merino ram</labelMale>
    <label>merino ewe</label>
    <lifeStages>
      <li>
        <label>merino lamb</label>
        <labelPlural>merino lambs</labelPlural>
        <bodyGraphicData>
          <texPath>Animal/Sheep/Merino/MerinoLamb</texPath>
          <drawSize>1.0</drawSize>
          <color>(190,140,50)</color>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Sheep/Dessicated_SheepFemale</texPath>
          <drawSize>1.2</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Animal/Sheep/Merino/MerinoRam</texPath>
          <drawSize>1.4</drawSize>
          <color>(255,255,255)</color>
        </bodyGraphicData>
        <femaleGraphicData>
          <texPath>Animal/Sheep/Merino/MerinoEwe</texPath>
          <drawSize>1.2</drawSize>
        </femaleGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Sheep/Dessicated_SheepMale</texPath>
          <drawSize>1.30</drawSize>
        </dessicatedBodyGraphicData>
        <femaleDessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Sheep/Dessicated_SheepFemale</texPath>
          <drawSize>1.30</drawSize>
        </femaleDessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Animal/Sheep/Merino/MerinoRam</texPath>
          <drawSize>1.8</drawSize>
          <color>(255,255,255)</color>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.05)</offset>
          </shadowData>
        </bodyGraphicData>
        <femaleGraphicData>
          <texPath>Animal/Sheep/Merino/MerinoEwe</texPath>
          <drawSize>1.6</drawSize>
        </femaleGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Sheep/Dessicated_SheepMale</texPath>
          <drawSize>1.75</drawSize>
        </dessicatedBodyGraphicData>
        <femaleDessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Sheep/Dessicated_SheepFemale</texPath>
          <drawSize>1.70</drawSize>
        </femaleDessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
</Defs>