<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Animal Base -->
  <ThingDef ParentName="ArkSheepBase">
    <defName>LincolnSheep</defName>
    <label>lincoln sheep</label>
    <description>The Lincoln is a breed of sheep from the England known for their cold tolerance and long heavy wool.</description>
    <statBases>
      <ComfyTemperatureMin>-75</ComfyTemperatureMin>
    </statBases>
    <comps>
      <li Class="CompProperties_Shearable">
        <woolDef>WoolSheep</woolDef>
        <shearIntervalDays>10</shearIntervalDays>
        <woolAmount>90</woolAmount>
      </li>
    </comps>
    <race>
      <wildness>0.05</wildness>
      <petness>0.10</petness>
    </race>
  </ThingDef>
  <!-- Animal Textures -->
  <PawnKindDef ParentName="ArkSheepPawnBase">
    <defName>LincolnSheep</defName>
    <labelPlural>lincoln sheep</labelPlural>
    <race>LincolnSheep</race>
    <wildGroupSize>3~9</wildGroupSize>
    <labelMale>lincoln ram</labelMale>
    <label>lincoln ewe</label>
    <lifeStages>
      <li>
        <label>lincoln lamb</label>
        <labelPlural>lincoln lambs</labelPlural>
        <bodyGraphicData>
          <texPath>Animal/Sheep/Lincoln/Lincoln</texPath>
          <drawSize>1.0</drawSize>
          <color>(190,140,50)</color>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Sheep/Dessicated_SheepFemale</texPath>
          <drawSize>1.2</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Animal/Sheep/Lincoln/Lincoln</texPath>
          <drawSize>1.4</drawSize>
          <color>(255,255,255)</color>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Sheep/Dessicated_SheepFemale</texPath>
          <drawSize>1.30</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Animal/Sheep/Lincoln/Lincoln</texPath>
          <drawSize>1.8</drawSize>
          <color>(255,255,255)</color>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.05)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Sheep/Dessicated_SheepFemale</texPath>
          <drawSize>1.75</drawSize>
        </dessicatedBodyGraphicData>
      </li>
