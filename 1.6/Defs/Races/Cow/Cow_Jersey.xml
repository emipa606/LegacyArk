<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArkCowBase">
    <defName>JerseyCow</defName>
    <label>jersey cow</label>
    <description>The Jersey is a breed of dairy cattle from the British Channel Islands known for their rich milk.</description>
    <statBases>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <Wildness>0.05</Wildness>
    </statBases>
    <comps>
      <li Class="CompProperties_Milkable">
        <milkDef>RichMilk</milkDef>
        <milkIntervalDays>1</milkIntervalDays>
        <milkAmount>18</milkAmount>
      </li>
    </comps>
    <race>
      <petness>0.05</petness>
      <useMeatFrom>Cow</useMeatFrom>
    </race>
  </ThingDef>
  <!-- Animal Textures -->
